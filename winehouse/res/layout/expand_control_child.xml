<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:orientation="horizontal" android:layout_width="match_parent" android:id="@+id/orderType" 
    android:layout_height="wrap_content" android:tag="child">  

    <TextView
        android:id="@+id/childId"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingBottom="5px"
        android:paddingLeft="80px"
        android:paddingTop="5px"
        android:text="TextView" 
        >
	</TextView>

    <TextView
        android:id="@+id/childPosition"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="TextView" android:layout_weight="1" />

    <ImageView
        android:id="@+id/deleteOrderDetail"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:onClick="deleteOrderDetail"
        android:src="@android:drawable/ic_notification_clear_all" />
  
</LinearLayout>